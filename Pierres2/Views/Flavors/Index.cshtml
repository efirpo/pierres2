@{
  Layout = "_Layout";
}
@using Pierres2.Models;

<h1>Pierre's Flavors</h1>

@foreach (Flavor flavor in Model)
{
  <p>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId})</p>
}

@Html.ActionLink("View all treats", "Index", "Treats")

@if (User.Identity.IsAuthenticated)
{
  <br>
  @Html.ActionLink("Add a new flavor", "Create")
}